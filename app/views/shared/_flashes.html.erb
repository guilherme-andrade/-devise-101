<% if notice %>
	<p class="flash flash-success alert alert-dismissible fade show" role="alert" >
		<%= notice %>
		<a data-dismiss="alert" aria-label="Close">
    	<i class="fas fa-times"></i>
  	</a>
	</p>
<% end %>

<% if alert %>
	<p class="flash flash-error alert alert-dismissible fade show" role="alert" >
		<%= alert %>
		<a data-dismiss="alert" aria-label="Close">
    	<i class="fas fa-times"></i>
  	</a>
	</p>
<% end %>